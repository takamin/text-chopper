{
  "name": "text-chopper",
  "version": "1.0.1",
  "description": "Chop a large text to array",
  "main": "index.js",
  "scripts": {
    "build": "parcel build --out-dir ./dist --out-file text-chopper.js index.js",
    "docs": "jsdoc --configure jsdoc.json --verbose",
    "lint": "eslint .",
    "test": "mocha",
    "test-web": "parcel test/test.html --open"
  },
  "keywords": [
    "text",
    "chop",
    "divide"
  ],
  "author": "Koji Takami <vzg03566@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "jsdoc": "^3.6.3",
    "minami": "^1.2.3",
    "mocha": "^6.2.2",
    "parcel-bundler": "^1.12.4"
  },
  "dependencies": {
    "debug": "^4.1.1"
  },
  "homepage": "https://github.com/takamin/text-chopper#readme",
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "mocha": true
    },
    "globals": {
      "$": true,
      "ArrayBuffer": true
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn",
      "valid-jsdoc": "warn"
    },
    "extends": "eslint:recommended"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/takamin/text-chopper.git"
  },
  "bugs": {
    "url": "https://github.com/takamin/text-chopper/issues"
  }
}
